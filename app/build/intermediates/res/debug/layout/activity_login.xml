<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="#607D8B"
    android:orientation="vertical"
    android:id="@+id/activity_login">
    <!-- the action bar is already included, it's just not shown in the preview -->
    <!-- action bar appears when program is run on a device -->
    <Button
        android:id="@+id/signin_or_register"
        android:background="#FFFFFF"
        android:layout_width="138dp"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:text="@string/signin_or_register"
        android:textColor="#607D8B"
        android:onClick="signInOrRegister"
        android:layout_gravity="center"
        android:layout_below="@+id/whiteRec"
        android:layout_alignStart="@+id/whiteRec"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/login_as_guest"
        android:background="#FFFFFF"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/login_as_guest"
        android:textColor="#607D8B"
        android:onClick="loginAsGuest"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/whiteRec"
        android:layout_alignEnd="@+id/whiteRec"
        android:layout_marginRight="5dp" />
    <ImageView
        android:id="@+id/whiteRec"
        android:layout_width="290dp"
        android:layout_height="100dp"
        android:src="@drawable/white_rectangle"
        android:layout_alignTop="@+id/enter_username"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/enter_password"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:background="@null"
        android:hint="@string/enter_password"
        android:gravity="center"
        android:layout_below="@+id/enter_username"
        android:layout_centerHorizontal="true"
        android:maxLines="1"/>
    <EditText
        android:id="@+id/enter_username"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="@string/enter_username"
        android:gravity="center"
        android:layout_marginTop="171dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/whiteRec"
        android:maxLines="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Create an account"
        android:textColor="#FFFFFF"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/login_as_guest"
        android:layout_alignEnd="@+id/login_as_guest"
        android:layout_alignStart="@+id/signin_or_register" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crumb_logo"
        android:src="@drawable/crumbs_logo"
        android:layout_above="@+id/whiteRec"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/login_as_guest"
        android:layout_alignParentStart="true"
        android:layout_marginStart="394dp" />
</RelativeLayout><!-- From: file:/C:/Users/Victo_000/Documents/GitHub/Breadcrumbs492/app/src/main/res/layout/activity_login.xml -->